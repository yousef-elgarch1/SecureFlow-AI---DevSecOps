# API Keys for Cloud LLMs (Plan B)
# Sign up at respective platforms and add your keys here

# Groq API (Free tier: 30 requests/min)
# Get key: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# DeepSeek API (Very affordable: $0.27/million tokens)
# Get key: https://platform.deepseek.com
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# OpenAI API (GPT-4o-mini)
# Get key: https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO
API_PORT=8000

# Vector Database Settings
VECTOR_DB_PATH=./vector_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM Configuration (Plan B - Cloud)
LLM_MODE=cloud
SAST_LLM_PROVIDER=groq
SCA_LLM_PROVIDER=groq
DAST_LLM_PROVIDER=deepseek
ORCHESTRATOR_PROVIDER=openai

# Model Names
GROQ_MODEL=llama-3.3-70b-versatile
DEEPSEEK_MODEL=deepseek-chat
OPENAI_MODEL=gpt-4o-mini

# LLM Parameters
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=4000
LLM_TIMEOUT=60

# Compliance Settings
NIST_CSF_MIN_COVERAGE=85
ISO27001_MIN_CONTROLS=10

# Output Settings
OUTPUT_FORMAT=pdf
GENERATED_POLICIES_DIR=./outputs/generated_policies
